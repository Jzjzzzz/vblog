<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzj.vblog.web.mapper.WebsiteResourceMapper">

    <resultMap type="com.jzj.vblog.web.pojo.entity.WebsiteResource" id="WebsiteResourceResult">
        <id     property="id"     column="id"     />
        <result property="status"     column="status"      />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="resourceName" column="resource_name" />
        <result property="resourceAddress" column="resource_address" />
        <result property="resourceImg" column="resource_img" />
        <result property="resourceType" column="resource_type" />
        <result property="clickRate" column="click_rate" />
    </resultMap>
    <sql id="selectWebsiteResourceVo">
        select id,create_time, update_time,resource_name,resource_address,resource_img,resource_type,click_rate
        from website_resource
    </sql>

    <select id="selectWebsiteList" resultType="com.jzj.vblog.web.pojo.entity.WebsiteResource" parameterType="com.jzj.vblog.web.pojo.entity.WebsiteResource">
        <include refid="selectWebsiteResourceVo"/>
        <where>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                and date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                and date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
    </select>
</mapper>
